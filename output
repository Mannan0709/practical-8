SQL> create table client(srno int, name varchar(20));

Table created.

SQL> create table Audit_t as select * from client;

Table created.

SQL> insert into client (srno,name) values (101,'Mannan');

1 row created.

SQL> insert into client (srno,name) values (102,'Pratik');

1 row created.

